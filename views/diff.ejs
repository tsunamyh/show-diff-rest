        td { padding: 12px 15px; border-bottom: 1px solid #ddd; }
        tbody tr:hover { background: #f9f9f9; }
        .positive { color: #27ae60; font-weight: bold; }
        .negative { color: #e74c3c; font-weight: bold; }
