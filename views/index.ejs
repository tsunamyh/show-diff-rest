<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crypto Price Comparison</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font-family: 'Segoe UI'; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 100vh; padding: 20px; }
        .container { max-width: 1200px; margin: 0 auto; background: white; border-radius: 10px; box-shadow: 0 10px 40px rgba(0,0,0,0.3); }
        header { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 30px; text-align: center; }
        header h1 { font-size: 2.5em; margin-bottom: 10px; }
        .content { padding: 30px; }
        .info-box { background: #f5f5f5; padding: 20px; border-radius: 8px; margin-bottom: 20px; }
        .rate-display { font-size: 1.5em; font-weight: bold; color: #667eea; }
        table { width: 100%; border-collapse: collapse; margin-top: 30px; }
        th { background: #667eea; color: white; padding: 15px; text-align: left; }
        td { padding: 12px 15px; border-bottom: 1px solid #ddd; }
        tr:hover { background: #f9f9f9; }
        .positive { color: #27ae60; font-weight: bold; }
        .negative { color: #e74c3c; font-weight: bold; }
        .loading { text-align: center; padding: 40px; color: #667eea; }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>Crypto Price Comparison</h1>
            <p>Wallex vs Binance Real-time</p>
        </header>
        <div class="content">
            <div class="info-box">
                <h3>USDT/TMN Rate</h3>
                <div class="rate-display" id="rate">Loading...</div>
            </div>
            <div id="priceTable"><div class="loading">Loading data...</div></div>
        </div>
    </div>
    <script>
        async function fetchPrices() {
            try {
                const response = await fetch('/api/prices');
                const data = await response.json();
                document.getElementById('rate').textContent = data.usdtToTmnRate.toLocaleString();
                renderTable(data);
            } catch (error) {
                console.error('Error:', error);
            }
        }
        function renderTable(data) {
            let html = '<table><thead><tr><th>Symbol</th><th>Wallex</th><th>Binance</th><th>Diff %</th></tr></thead><tbody>';
            let count = 0;
            for (const symbol in data.binanceOrderbooks.usdt) {
                const b = data.binanceOrderbooks.usdt[symbol];
                const w = data.wallexOrderbooks.usdtPairs[symbol.toLowerCase()];
                if (!b || !w) continue;
                const diff = ((parseFloat(b.ask[0]) - parseFloat(w.ask[0])) / parseFloat(w.ask[0]) * 100).toFixed(2);
                const cls = diff > 0 ? 'positive' : 'negative';
                html += `<tr><td>${symbol}</td><td>${parseFloat(w.ask[0]).toFixed(4)}</td><td>${parseFloat(b.ask[0]).toFixed(4)}</td><td class="${cls}">${diff}%</td></tr>`;
                if (++count >= 20) break;
            }
            html += '</tbody></table>';
            document.getElementById('priceTable').innerHTML = html;
        }
        fetchPrices();
        setInterval(fetchPrices, 10000);
    </script>
</body>
</html>
